<svg width="512" height="512" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="512" height="512" fill="#1e40af" rx="64"/>
  
  <!-- Authentic Lion Capital of Ashoka (Most Detailed Version) -->
  <g transform="translate(86, 86)">
    <!-- Lotus Base (Bottom Platform) -->
    <ellipse cx="170" cy="270" rx="140" ry="20" fill="#8b5cf6"/>
    <rect x="30" y="250" width="280" height="40" fill="#6366f1" rx="4"/>
    
    <!-- Decorative Lotus Petals -->
    <g fill="#a855f7">
      <ellipse cx="90" cy="250" rx="8" ry="15"/>
      <ellipse cx="120" cy="250" rx="8" ry="15"/>
      <ellipse cx="150" cy="250" rx="8" ry="15"/>
