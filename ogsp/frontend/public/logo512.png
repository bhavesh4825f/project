      <ellipse cx="240" cy="250" rx="8" ry="15"/>
      <ellipse cx="270" cy="250" rx="8" ry="15"/>
    </g>
    
    <!-- Abacus with Animals (Horse, Bull, Elephant, Lion) -->
    <rect x="50" y="220" width="240" height="30" fill="#d97706" rx="4"/>
    
    <!-- Animals on Abacus (Simplified representations) -->
    <g fill="#ffffff">
      <!-- Horse -->
      <ellipse cx="80" cy="235" rx="8" ry="12"/>
      <circle cx="75" cy="230" r="3"/>
      <rect x="77" y="225" width="6" height="4"/>
      
      <!-- Bull -->
      <ellipse cx="130" cy="235" rx="10" ry="12"/>
      <circle cx="125" cy="228" r="2"/>
      <circle cx="135" cy="228" r="2"/>
      <polygon points="130,225 125,222 135,222" fill="#f59e0b"/>
      
      <!-- Elephant -->
      <ellipse cx="180" cy="235" rx="12" ry="12"/>
      <ellipse cx="175" cy="225" rx="3" ry="8"/>
      <circle cx="175" cy="230" r="1.5" fill="#d97706"/>
      <circle cx="185" cy="230" r="1.5" fill="#d97706"/>
      
      <!-- Lion -->
      <ellipse cx="230" cy="235" rx="10" ry="12"/>
      <circle cx="225" cy="228" r="3" fill="#f59e0b"/>
      <circle cx="235" cy="228" r="3" fill="#f59e0b"/>
      <circle cx="230" cy="225" r="3" fill="#f59e0b"/>
    </g>
    
    <!-- Ashoka Chakra (Wheel of Law) -->
    <circle cx="170" cy="170" r="70" fill="none" stroke="#ffffff" stroke-width="8"/>
    <circle cx="170" cy="170" r="50" fill="none" stroke="#ffffff" stroke-width="4"/>
    <circle cx="170" cy="170" r="30" fill="none" stroke="#ffffff" stroke-width="4"/>
    <circle cx="170" cy="170" r="6" fill="#ffffff"/>
    
    <!-- 24 Spokes of Dharma -->
    <g stroke="#ffffff" stroke-width="3">
      <line x1="170" y1="100" x2="170" y2="120" transform="rotate(0 170 170)"/>
      <line x1="170" y1="100" x2="170" y2="120" transform="rotate(15 170 170)"/>
      <line x1="170" y1="100" x2="170" y2="120" transform="rotate(30 170 170)"/>
