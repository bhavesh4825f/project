      <line x1="170" y1="100" x2="170" y2="120" transform="rotate(345 170 170)"/>
    </g>
    
    <!-- Three Lions (Highly Detailed) -->
    <g fill="#fbbf24">
      <!-- Front Lion (Main) -->
      <ellipse cx="170" cy="85" rx="15" ry="25"/>
      
      <!-- Detailed Mane -->
      <circle cx="160" cy="70" r="5" fill="#f59e0b"/>
      <circle cx="180" cy="70" r="5" fill="#f59e0b"/>
      <circle cx="170" cy="65" r="5" fill="#f59e0b"/>
      <circle cx="155" cy="75" r="4" fill="#f59e0b"/>
      <circle cx="185" cy="75" r="4" fill="#f59e0b"/>
      <circle cx="165" cy="62" r="3" fill="#f59e0b"/>
      <circle cx="175" cy="62" r="3" fill="#f59e0b"/>
      
      <!-- Lion Features -->
      <circle cx="165" cy="78" r="2" fill="#1e40af"/> <!-- Left eye -->
      <circle cx="175" cy="78" r="2" fill="#1e40af"/> <!-- Right eye -->
      <ellipse cx="170" cy="85" rx="2" ry="1" fill="#b45309"/> <!-- Nose -->
      <path d="M 165 88 Q 170 90 175 88" stroke="#b45309" stroke-width="1" fill="none"/> <!-- Mouth -->
      
      <!-- Left Lion (Profile) -->
      <ellipse cx="130" cy="85" rx="12" ry="20"/>
      <circle cx="122" cy="72" r="4" fill="#f59e0b"/>
      <circle cx="135" cy="72" r="4" fill="#f59e0b"/>
      <circle cx="130" cy="68" r="3" fill="#f59e0b"/>
      <circle cx="125" cy="77" r="1.5" fill="#1e40af"/>
      
      <!-- Right Lion (Profile) -->
      <ellipse cx="210" cy="85" rx="12" ry="20"/>
